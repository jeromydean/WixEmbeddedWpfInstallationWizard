<local:WizardPageBase
  x:Class="WpfInstallationWizard.Views.InstallFinishedPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:local="clr-namespace:WpfInstallationWizard.Views"
  xmlns:viewModels="clr-namespace:WpfInstallationWizard.ViewModels"
  mc:Ignorable="d"
  d:DataContext="{d:DesignInstance IsDesignTimeCreatable=False, Type={x:Type viewModels:InstallFinishedPageViewModel}}"
  Height="250"
  Width="500">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <TextBlock
      Grid.Row="0"
      Grid.Column="0"
      Margin="50"
      TextWrapping="Wrap">
      <Run FontWeight="Bold">Congratulations! Fake has been successfully installed on your system.</Run>
      <LineBreak/><LineBreak/>Thank you for choosing Fake! We hope you enjoy using the software.
    </TextBlock>
    <StackPanel
      Grid.Row="1"
      Grid.Column="0"
      Orientation="Horizontal"
      HorizontalAlignment="Right">
      <Button
        Margin="20,5,5,5"
        Content="E_xit"
        Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}, Path=DataContext.ExitCommand}"
        CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}"/>
    </StackPanel>
  </Grid>
</local:WizardPageBase>