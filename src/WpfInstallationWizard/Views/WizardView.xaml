<mah:MetroWindow 
  xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
  x:Class="WpfInstallationWizard.Views.WizardView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:local="clr-namespace:WpfInstallationWizard.Views"
  xmlns:viewModels="clr-namespace:WpfInstallationWizard.ViewModels"
  xmlns:valueConverters="clr-namespace:WpfInstallationWizard.ValueConverters"
  xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
  xmlns:dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
  mc:Ignorable="d"
  d:DataContext="{d:DesignInstance IsDesignTimeCreatable=False, Type={x:Type viewModels:WizardViewModel}}"
  d:Width="800"
  d:Height="450"
  ResizeMode="NoResize"
  SizeToContent="WidthAndHeight"
  TitleCharacterCasing="Normal"
  Title="{Binding CurrentPage.Title}"
  dialog:DialogParticipation.Register="{Binding}">
  <i:Interaction.Triggers>
    <i:EventTrigger EventName="Closing">
      <i:InvokeCommandAction
        Command="{Binding ClosingCommand}"
        PassEventArgsToCommand="True" />
    </i:EventTrigger>
  </i:Interaction.Triggers>
  <StackPanel>
    <ContentPresenter
      Grid.Row="0"
      Grid.Column="0"
      Content="{Binding CurrentPage, Converter={StaticResource WizardPageDataContextToWizardPageConverter}}" />
  </StackPanel>
</mah:MetroWindow>