<local:WizardPageBase
  x:Class="WpfInstallationWizard.Views.VerifyReadyPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
  xmlns:local="clr-namespace:WpfInstallationWizard.Views"
  xmlns:viewModels="clr-namespace:WpfInstallationWizard.ViewModels"
  mc:Ignorable="d"
  d:DataContext="{d:DesignInstance IsDesignTimeCreatable=False, Type={x:Type viewModels:VerifyReadyPageViewModel}}"
  Height="250"
  Width="500">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <TextBlock
      Grid.Row="0"
      Grid.Column="0"
      Margin="50"
      TextWrapping="Wrap">
      <Run FontWeight="Bold">
        You're almost there! All settings have been verified, and your system is ready for installation.
      </Run>
    </TextBlock>
    <StackPanel
      Grid.Row="1"
      Grid.Column="0"
      Orientation="Horizontal"
      HorizontalAlignment="Right">
      <Button
        Margin="5"
        Content="_Back"
        IsEnabled="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}, Path=DataContext.CanMovePrevious}"
        Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}, Path=DataContext.PreviousPageCommand}" />
      <Button
        Margin="5"
        Content="_Next"
        IsEnabled="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}, Path=DataContext.CanMoveNext}"
        Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}, Path=DataContext.NextPageCommand}" />
      <Button
        Margin="5"
        Content="_Install"
        Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}, Path=DataContext.StartInstallationCommand}" />
      <Button
        Margin="20,5,5,5"
        Content="_Cancel"
        Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}, Path=DataContext.ExitCommand}"
        CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}"/>
    </StackPanel>
  </Grid>
</local:WizardPageBase>
